<Window x:Class="AkhenTraderElite.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:AkhenTraderElite.Views"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
mc:Ignorable="d"
Title="Akhen Trader Elite - Elite EA Controller &amp; Strategy Launcher" 
Height="700" 
Width="1000"
MinHeight="600"
MinWidth="900"
WindowStartupLocation="CenterScreen"
Background="{DynamicResource MaterialDesignPaper}"
FontFamily="{DynamicResource MaterialDesignFont}"
TextElement.Foreground="{DynamicResource MaterialDesignBody}"
TextElement.FontWeight="Regular"
TextElement.FontSize="13"
TextOptions.TextFormattingMode="Ideal"
TextOptions.TextRenderingMode="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with ColorZone -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartLineVariant" 
                                            Width="32" 
                                            Height="32" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AKHEN TRADER ELITE" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Elite EA Controller &amp; Strategy Launcher v2.0" 
                                  FontSize="11"
                                  Opacity="0.7"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right">
                    <TextBlock Text="11 Elite Strategies • MT5 Code Generation • Prop Firm Ready" 
                              FontSize="12"
                              VerticalAlignment="Center"
                              Opacity="0.8"
                              Margin="0,0,20,0"/>
                    <Button Style="{StaticResource MaterialDesignIconButton}"
                           ToolTip="About Akhen Trader Elite"
                           Click="AboutButton_Click">
                        <materialDesign:PackIcon Kind="InformationOutline" />
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>


        <!-- Main TabControl -->
        <TabControl Grid.Row="1" 
                    Margin="10"
                    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                    SelectedIndex="{Binding SelectedTabIndex}">
            
            <!-- Tab 1: Preloaded Strategies -->
            <TabItem Header="Preloaded Strategies">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="BookOpenPageVariant" 
                                                    Width="24" 
                                                    Height="24"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Preloaded" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Preloaded Strategies" 
                                      FontSize="22" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Choose from our collection of prop-compliant trading strategies" 
                                      FontSize="14"
                                      Opacity="0.7"
                                      Margin="0,0,0,20"/>
                            
                            <!-- Strategy Cards -->
                            <ItemsControl ItemsSource="{Binding PreloadedStrategies}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <materialDesign:Card Margin="0,0,0,15" 
                                                           Padding="20"
                                                           materialDesign:ElevationAssist.Elevation="Dp2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <DockPanel Margin="0,0,0,8">
                                                        <TextBlock Text="{Binding Name}" 
                                                                 FontSize="18" 
                                                                 FontWeight="SemiBold"
                                                                 DockPanel.Dock="Left"/>
                                                        <StackPanel Orientation="Horizontal" 
                                                                   DockPanel.Dock="Right"
                                                                   HorizontalAlignment="Right">
                                                            <Border Background="{DynamicResource PrimaryHueLightBrush}"
                                                                   CornerRadius="3"
                                                                   Padding="8,3"
                                                                   Margin="0,0,5,0">
                                                                <TextBlock Text="{Binding Category}" 
                                                                          FontSize="10"
                                                                          Foreground="White"
                                                                          FontWeight="SemiBold"/>
                                                            </Border>
                                                            <Border Background="{DynamicResource SecondaryHueMidBrush}"
                                                                   CornerRadius="3"
                                                                   Padding="8,3">
                                                                <TextBlock Text="{Binding Difficulty}" 
                                                                          FontSize="10"
                                                                          Foreground="White"
                                                                          FontWeight="SemiBold"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </DockPanel>
                                                    <TextBlock Text="{Binding Description}" 
                                                             FontSize="13"
                                                             Opacity="0.7"
                                                             TextWrapping="Wrap"
                                                             Margin="0,0,0,10"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Entry Conditions: " 
                                                                  FontSize="11" 
                                                                  Opacity="0.6"
                                                                  Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding Strategy.EntryConditions.Count}" 
                                                                  FontSize="11" 
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Text=" | Exit Conditions: " 
                                                                  FontSize="11" 
                                                                  Opacity="0.6"
                                                                  Margin="10,0,5,0"/>
                                                        <TextBlock Text="{Binding Strategy.ExitConditions.Count}" 
                                                                  FontSize="11" 
                                                                  FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" 
                                                           Orientation="Horizontal"
                                                           VerticalAlignment="Center"
                                                           Margin="20,0,0,0">
                                                    <Button Content="LOAD" 
                                                           Style="{StaticResource MaterialDesignRaisedButton}"
                                                           Command="{Binding DataContext.LoadPreloadedStrategyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </materialDesign:Card>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab 2: Custom Strategy Builder -->
            <TabItem Header="Custom Builder">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Tune" 
                                                    Width="24" 
                                                    Height="24"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Custom" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Custom Strategy Builder" 
                                      FontSize="22" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Build your own trading strategy from scratch" 
                                      FontSize="14"
                                      Opacity="0.7"
                                      Margin="0,0,0,20"/>
                            
                            <!-- Strategy Name Section -->
                            <materialDesign:Card Margin="0,0,0,15" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Strategy Name" 
                                              FontSize="16" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentStrategy.Name, UpdateSourceTrigger=PropertyChanged}" 
                                            materialDesign:HintAssist.Hint="Enter your strategy name"
                                            FontSize="14"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                                </StackPanel>
                            </materialDesign:Card>
                            
                            <!-- Entry Conditions Section -->
                            <materialDesign:Card Margin="0,0,0,15" Padding="20">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,15">
                                        <TextBlock Text="Entry Conditions" 
                                                  FontSize="18" 
                                                  FontWeight="SemiBold"
                                                  DockPanel.Dock="Left"
                                                  VerticalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Right"
                                                   DockPanel.Dock="Right">
                                            <Button Command="{Binding CustomBuilderViewModel.AddEntryConditionCommand}"
                                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                                   Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Plus" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,5,0"/>
                                                    <TextBlock Text="ADD" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Command="{Binding CustomBuilderViewModel.ClearEntryConditionsCommand}"
                                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                                   ToolTip="Clear all entry conditions">
                                                <materialDesign:PackIcon Kind="DeleteSweep"/>
                                            </Button>
                                        </StackPanel>
                                    </DockPanel>
                                    
                                    <TextBlock Text="Define when to enter trades (buy/sell signals)..." 
                                              Opacity="0.7"
                                              Margin="0,0,0,15"
                                              Visibility="{Binding CustomBuilderViewModel.EntryConditions.Count, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    
                                    <!-- Entry Conditions List -->
                                    <ItemsControl ItemsSource="{Binding CustomBuilderViewModel.EntryConditions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:IndicatorConditionControl />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <TextBlock Text="No entry conditions added yet. Click ADD to create your first condition." 
                                              Opacity="0.5"
                                              Margin="0,10,0,0"
                                              TextAlignment="Center"
                                              Visibility="{Binding CustomBuilderViewModel.EntryConditions.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                                </StackPanel>
                            </materialDesign:Card>
                            
                            <!-- Exit Conditions Section -->
                            <materialDesign:Card Margin="0,0,0,15" Padding="20">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,15">
                                        <TextBlock Text="Exit Conditions" 
                                                  FontSize="18" 
                                                  FontWeight="SemiBold"
                                                  DockPanel.Dock="Left"
                                                  VerticalAlignment="Center"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Right"
                                                   DockPanel.Dock="Right">
                                            <Button Command="{Binding CustomBuilderViewModel.AddExitConditionCommand}"
                                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                                   Margin="0,0,10,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Plus" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,5,0"/>
                                                    <TextBlock Text="ADD" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Command="{Binding CustomBuilderViewModel.ClearExitConditionsCommand}"
                                                   Style="{StaticResource MaterialDesignOutlinedButton}"
                                                   ToolTip="Clear all exit conditions">
                                                <materialDesign:PackIcon Kind="DeleteSweep"/>
                                            </Button>
                                        </StackPanel>
                                    </DockPanel>
                                    
                                    <TextBlock Text="Define when to exit trades (close positions)..." 
                                              Opacity="0.7"
                                              Margin="0,0,0,15"
                                              Visibility="{Binding CustomBuilderViewModel.ExitConditions.Count, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    
                                    <!-- Exit Conditions List -->
                                    <ItemsControl ItemsSource="{Binding CustomBuilderViewModel.ExitConditions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <local:IndicatorConditionControl />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <TextBlock Text="No exit conditions added yet. Click ADD to create your first condition." 
                                              Opacity="0.5"
                                              Margin="0,10,0,0"
                                              TextAlignment="Center"
                                              Visibility="{Binding CustomBuilderViewModel.ExitConditions.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                                </StackPanel>
                            </materialDesign:Card>
                            
                            <!-- Risk Management Section -->
                            <materialDesign:Card Margin="0,0,0,15" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Risk Management" 
                                              FontSize="18" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,15"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                            <TextBlock Text="Stop Loss (pips)" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentStrategy.RiskSettings.StopLossPips}" 
                                                    materialDesign:HintAssist.Hint="Enter SL in pips"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                            <TextBlock Text="Take Profit (pips)" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentStrategy.RiskSettings.TakeProfitPips}" 
                                                    materialDesign:HintAssist.Hint="Enter TP in pips"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Risk % per Trade" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentStrategy.RiskSettings.RiskPercentPerTrade}" 
                                                    materialDesign:HintAssist.Hint="e.g., 1.0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                            <CheckBox Content="Enable Trailing Stop" 
                                                     IsChecked="{Binding CurrentStrategy.RiskSettings.UseTrailingStop}"
                                                     Margin="0,20,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>
                            
                            
                            
                            
                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,20">
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Command="{Binding SaveConfigurationCommand}"
                                       Margin="0,0,10,0"
                                       Padding="15,10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" 
                                                                Width="20" 
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                        <TextBlock Text="SAVE CONFIG" 
                                                  VerticalAlignment="Center"
                                                  FontSize="14"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Command="{Binding LoadConfigurationCommand}"
                                       Margin="0,0,15,0"
                                       Padding="15,10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" 
                                                                Width="20" 
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                        <TextBlock Text="LOAD CONFIG" 
                                                  VerticalAlignment="Center"
                                                  FontSize="14"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                       Command="{Binding ValidateStrategyCommand}"
                                       Margin="0,0,15,0"
                                       Padding="20,10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldCheck" 
                                                                Width="20" 
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,8,0"/>
                                        <TextBlock Text="VALIDATE" 
                                                  VerticalAlignment="Center"
                                                  FontSize="14"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                       Command="{Binding GenerateStrategyCommand}"
                                       Padding="30,10">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Creation" 
                                                                Width="20" 
                                                                Height="20"
                                                                VerticalAlignment="Center"

                                                                Margin="0,0,10,0"/>
                                        <TextBlock Text="GENERATE CODE" 
                                                  VerticalAlignment="Center"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab 3: Prop Firm Settings -->
            <TabItem Header="Prop Settings">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="ShieldCheck" 
                                                    Width="24" 
                                                    Height="24"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Prop Firm" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Prop Firm Settings" 
                                      FontSize="22" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="Configure settings specific to your prop firm's rules" 
                                      FontSize="14"
                                      Opacity="0.7"
                                      Margin="0,0,0,20"/>
                            
                            <materialDesign:Card Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Select Prop Firm" 
                                              FontSize="16" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,15"/>
                                    
                                    
                                    
                                    <ComboBox materialDesign:HintAssist.Hint="Choose a prop firm"
                                             ItemsSource="{Binding AvailablePropFirms}"
                                             SelectedItem="{Binding SelectedPropFirmName}"
                                             Margin="0,0,0,10" />
                                    
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                           Command="{Binding ApplyPropFirmPresetCommand}"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Download" 
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,5,0"/>
                                            <TextBlock Text="APPLY PRESET" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Separator Margin="0,0,0,20"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                                            <TextBlock Text="Daily Drawdown %" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentPropFirmPreset.DailyDrawdownPercent}" 
                                                    materialDesign:HintAssist.Hint="Max daily loss %"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                                            <TextBlock Text="Max Drawdown %" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentPropFirmPreset.MaxDrawdownPercent}" 
                                                    materialDesign:HintAssist.Hint="Max total loss %"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                            <TextBlock Text="Max Open Trades" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentPropFirmPreset.MaxOpenTrades}" 
                                                    materialDesign:HintAssist.Hint="Max concurrent positions"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,15">
                                            <TextBlock Text="Magic Number" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding CurrentPropFirmPreset.MagicNumber}" 
                                                    materialDesign:HintAssist.Hint="EA identifier"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                                            <CheckBox Content="Enforce visible SL/TP on all orders" 
                                                     IsChecked="{Binding CurrentPropFirmPreset.EnforceVisibleSLTP}"
                                                     ToolTip="Required by most prop firms to ensure risk management"
                                                     Margin="0,5,0,5"/>
                                            <CheckBox Content="Enable drawdown monitoring" 
                                                     IsChecked="{Binding CurrentPropFirmPreset.EnableDrawdownMonitoring}"
                                                     ToolTip="Automatically stops trading if drawdown limits are breached"
                                                     Margin="0,5,0,5"/>
                                            <CheckBox Content="News filter (avoid trading during news)" 
                                                     IsChecked="{Binding CurrentPropFirmPreset.UseNewsFilter}"
                                                     ToolTip="Prevents trading during high-impact news events"
                                                     Margin="0,5,0,5"/>
                                        </StackPanel>

                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab 4: Generate & Export -->
            <TabItem Header="Generate">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CodeBraces" 
                                                    Width="24" 
                                                    Height="24"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Generate" 
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0">
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Generate &amp; Export" 
                                      FontSize="22" 
                                      FontWeight="SemiBold"
                                      DockPanel.Dock="Left"
                                      VerticalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True"
                                        Width="100"
                                        Height="4"
                                        Margin="15,0,0,0"
                                        DockPanel.Dock="Left"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsGenerating, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </DockPanel>
                        <TextBlock FontSize="16" 
                                  FontWeight="Medium"
                                  Margin="0,0,0,5">
                            <Run Text="Strategy: "/>
                            <Run Text="{Binding CurrentStrategy.Name}" 
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </TextBlock>
                        <TextBlock Text="Preview and export your MQL5 Expert Advisor code" 
                                  FontSize="14"
                                  Opacity="0.7"
                                  Margin="0,0,0,20"/>
                    </StackPanel>
                    
                    <!-- Code Preview -->
                    <materialDesign:Card Grid.Row="1" Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <DockPanel Grid.Row="0" 
                                      Background="{DynamicResource MaterialDesignDivider}"
                                      Margin="0,0,0,10">
                                <TextBlock Text="Generated MQL5 Code Preview" 
                                          FontWeight="SemiBold"
                                          Padding="15,10"/>
                            </DockPanel>
                            
                            <ScrollViewer Grid.Row="1" 
                                        VerticalScrollBarVisibility="Auto"
                                        Padding="15">
                                <TextBox Text="{Binding GeneratedCode}" 
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        IsReadOnly="True"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto"
                                        MinHeight="300"
                                        AcceptsReturn="True"/>
                            </ScrollViewer>
                        </Grid>
                    </materialDesign:Card>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding CopyCodeCommand}"
                               Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentCopy" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="COPY CODE" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding SaveMq5Command}"
                               Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileCode" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="SAVE .MQ5" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                               Command="{Binding SaveSetCommand}"
                               Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="SAVE .SET" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{Binding ExportProjectCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderZip" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="EXPORT ALL" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 5: EA Control (Coming Soon) -->
            <TabItem Header="EA Control">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <materialDesign:PackIcon Kind="RobotIndustrial" 
                                                    Width="24" 
                                                    Height="24"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="EA Control" 
                                      TextAlignment="Center"
                                      FontSize="11"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel MaxWidth="800">
                            <!-- EA Status Card -->
                            <materialDesign:Card Padding="20" Margin="0,0,0,15"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <TextBlock Text="EA Bridge Status" 
                                              FontSize="20" 
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <materialDesign:PackIcon Kind="CircleOutline" 
                                                                Foreground="Red"
                                                                Width="20"
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,0"/>
                                        <TextBlock Text="Status: Disconnected" 
                                                  FontSize="16"
                                                  VerticalAlignment="Center"
                                                  FontWeight="Medium"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="Connect to MetaTrader 5 bridge EA to enable live trading control."
                                              TextWrapping="Wrap"
                                              Opacity="0.7"
                                              FontSize="14"
                                              Margin="0,0,0,20"/>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="CONNECT TO EA"
                                               Style="{StaticResource MaterialDesignRaisedButton}"
                                               IsEnabled="False"
                                               Margin="0,0,10,0"
                                               ToolTip="Coming soon - requires bridge EA in MT5"/>
                                        <Button Content="START TRADING"
                                               Style="{StaticResource MaterialDesignRaisedButton}"
                                               IsEnabled="False"
                                               Margin="0,0,10,0"
                                               ToolTip="Connect to EA first"/>
                                        <Button Content="STOP TRADING"
                                               Style="{StaticResource MaterialDesignOutlinedButton}"
                                               IsEnabled="False"
                                               ToolTip="Connect to EA first"/>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                            
                            <!-- Coming Soon Features Card -->
                            <materialDesign:Card Padding="20" Background="{DynamicResource MaterialDesignPaper}"
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <materialDesign:PackIcon Kind="Rocket" 
                                                                Width="24"
                                                                Height="24"
                                                                Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,0"/>
                                        <TextBlock Text="Coming Soon in v2.1" 
                                                  FontSize="18" 
                                                  FontWeight="SemiBold"
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="Real-time EA control via HTTP bridge"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Margin="0,0,0,10"/>
                                    
                                    <StackPanel Margin="20,0,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="Start/stop trading with 1 click"
                                                      Opacity="0.8"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="Live strategy parameter updates (SL/TP, lot size)"
                                                      Opacity="0.8"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="Real-time position monitoring and PnL tracking"
                                                      Opacity="0.8"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="Performance dashboard with charts and metrics"
                                                      Opacity="0.8"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,8,0"/>
                                            <TextBlock Text="Emergency stop button (close all positions instantly)"
                                                      Opacity="0.8"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <Border Background="{DynamicResource MaterialDesignDivider}"
                                           Height="1"
                                           Margin="0,20,0,15"/>
                                    
                                    <TextBlock Text="This tab will transform Akhen Trader Elite into a full EA controller, allowing you to manage live trading directly from this interface without opening MetaTrader 5."
                                              TextWrapping="Wrap"
                                              Opacity="0.7"
                                              FontSize="12"
                                              FontStyle="Italic"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer Status Bar -->
        <materialDesign:ColorZone Grid.Row="2" 
                                  Mode="PrimaryLight" 
                                  Padding="10,5">
            <DockPanel>
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}" 
                          VerticalAlignment="Center"/>
                <TextBlock Text="v2.0.0" 
                          HorizontalAlignment="Right" 
                          DockPanel.Dock="Right"
                          VerticalAlignment="Center"
                          Opacity="0.7"/>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Snackbar for notifications -->
        <materialDesign:Snackbar MessageQueue="{Binding SnackbarMessageQueue}"
                                x:Name="MainSnackbar"
                                Grid.Row="2" />
    </Grid>
</Window>

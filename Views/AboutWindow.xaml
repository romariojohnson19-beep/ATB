<Window x:Class="AkhenTraderElite.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="About Akhen Trader Elite" 
        Height="600" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="20">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ChartLineVariant" 
                                        Width="48" 
                                        Height="48" 
                                        VerticalAlignment="Center"
                                        Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Akhen Trader Elite" 
                              FontSize="26" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Elite EA Controller and Strategy Launcher"
                              FontSize="14"
                              Opacity="0.8"
                              Margin="0,3,0,0"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="30">
            <StackPanel>
                <TextBlock Text="Version 2.0.0" 
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                
                <TextBlock Text="Build Date: February 1, 2026" 
                          FontSize="14"
                          Opacity="0.7"
                          Margin="0,0,0,25"/>

                <!-- Features Section -->
                <TextBlock Text="What's New in v2.0" 
                          FontSize="18"
                          FontWeight="SemiBold"
                          Margin="0,0,0,15"/>
                
                <StackPanel Margin="15,0,0,20">
                    <TextBlock Text="- Rebranded to Akhen Trader Elite"
                              FontSize="13"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="- 11 Elite Strategies (3 new: Correlation, Arbitrage, PA+ADX)"
                              FontSize="13"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="- ADX indicator support added"
                              FontSize="13"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="- Category and Difficulty badges for all strategies"
                              FontSize="13"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="- EA Control tab (bridge control coming in v2.1)"
                              FontSize="13"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="- Auto-switch to Custom Builder on strategy load"
                              FontSize="13"/>
                </StackPanel>

                <Separator Margin="0,0,0,20"/>

                <TextBlock Text="Copyright 2026 FuglyMan TokenArena" 
                          FontSize="16"
                          FontWeight="Medium"
                          Margin="0,0,0,20"/>

                <Separator Margin="0,0,0,20"/>

                <TextBlock Text="IMPORTANT DISCLAIMER" 
                          FontSize="16"
                          FontWeight="Bold"
                          Foreground="OrangeRed"
                          Margin="0,0,0,15"/>

                <TextBlock TextWrapping="Wrap"
                          FontSize="13"
                          LineHeight="22">
                    <Run Text="1. " FontWeight="SemiBold"/>
                    <Run Text="This software generates MQL5 code for educational and development purposes only. It does not provide financial advice."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="2. " FontWeight="SemiBold"/>
                    <Run Text="Always verify generated code before using in live trading. Test thoroughly in demo accounts first."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="3. " FontWeight="SemiBold"/>
                    <Run Text="Prop firm rules vary. Verify all settings comply with your specific prop firm's requirements."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="4. " FontWeight="SemiBold"/>
                    <Run Text="Trading involves risk. Strategies that violate prop firm rules may lead to account termination or breach."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="5. " FontWeight="SemiBold"/>
                    <Run Text="NO WARRANTY: This software is provided 'as is' without warranty of any kind, express or implied."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="6. " FontWeight="SemiBold"/>
                    <Run Text="The developer is not responsible for any losses, damages, or prop firm breaches resulting from use of this software."/>
                    <LineBreak/><LineBreak/>
                    
                    <Run Text="7. " FontWeight="SemiBold"/>
                    <Run Text="By using this software, you acknowledge that you understand and accept all risks associated with algorithmic trading."/>
                </TextBlock>

                <Separator Margin="0,20,0,20"/>

                <TextBlock Text="Features" 
                          FontSize="16"
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"/>
                
                <TextBlock TextWrapping="Wrap"
                          FontSize="12"
                          Opacity="0.8">
                    - 11 Elite Preloaded Strategies<LineBreak/>
                    - Custom Strategy Builder<LineBreak/>
                    - 10 Technical Indicators + ADX<LineBreak/>
                    - Multi-Timeframe Support<LineBreak/>
                    - 6 Prop Firm Presets<LineBreak/>
                    - Save/Load Configurations<LineBreak/>
                    - Complete File Export<LineBreak/>
                    - Real-Time Code Generation<LineBreak/>
                    - Validation System<LineBreak/>
                    - EA Control Panel (Coming Soon)
                </TextBlock>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <materialDesign:ColorZone Grid.Row="2" 
                                  Mode="PrimaryLight" 
                                  Padding="20">
            <Button Content="CLOSE" 
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Click="CloseButton_Click"
                   HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>
    </Grid>
</Window>
